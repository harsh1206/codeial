<li id="comment-<%= comment._id %>">
    <p>

      <% if(locals.user && locals.user.id==comment.user.id){%>
        <small>
          <a class="delete-comment-button" href="/comments/destroy/<%= comment._id%>">X</a>
        </small>
       <%}%> 

         <%= comment.content %>
         <br>
         <small>
             <%= comment.user.name %>
         </small>

         <% if(locals.user){%> 
               
          <a href="/likes/toggle/?id=<%= comment._id %>&type=Comment"  data-likes="<%= comment.likes.length %>" class="toggle-like-button" style="border:1px solid black;margin-left: 2%;">
            <%= comment.likes.length %>Likes
          </a>
      
        <%}else{%> 
           
            <%= comment.likes.length %>Likes
           
          <%}%>
          
         </small>  
        
    </p>
    </li>