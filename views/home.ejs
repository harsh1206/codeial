 <h1>
  Codeial / <%= title %>
 </h1>

 <section id="feed-posts">
     
    <h4>Posts</h4>
     
    <% if (locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
      
        <textarea name="content" colo="30" row="3" required></textarea>
        <input type="submit" value="Post" placeholder="type here..."> 

    </form>
     <%}%>   
          
   <div id="posts-list-container">
         
     <ul> 
      <% for(let i of posts){ %>
           
        <li>
           <p>
             <% if(locals.user && locals.user.id==i.user.id){%>
              <small>
                 <a href="/posts/destroy/<%= i._id%>">X</a>
              </small>
             <%}%> 
              <%= i.content %>
                   
              <br>

              <small> 
               <%= i.user.name %>
              </small> 

            </p>
          
            <div class="post-comment">
                
              <% if(locals.user) {%>
                 
                <form action="/comments/create" method="POST">

                  <input type="text" name="content" placeholder="Type here to add comment..." required>
                  <input type="hidden" name="post" value="<%= i._id %>">
                  <input type="submit" value="add comment">
                        
                </form>

              <%}%>

               <div class="post-comments-list">
                   <ul id="posts-comments-<%= i._id %>">

                       <% for(comment of i.comments){%>
                         
                         <p>

                           <% if(locals.user && locals.user.id==comment.user.id){%>
                             <small>
                               <a href="/comments/destroy/<%= comment._id%>">X</a>
                             </small>
                            <%}%> 

                              <%= comment.content %>
                              <br>
                              <small>
                                  <%= comment.user.name %>
                              </small>
                         </p>
                         
                       <%}%>        
                       
                   </ul>
               </div>

            </div>

        </li>   

      <% }%> 
  
     </ul>

   </div>

 </section>


  

 