 <h1>
  Codeial / <%= title %>
 </h1>

 <section id="feed-posts">
     
    <h4>Posts</h4>
     
    <% if (locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
      
        <textarea name="content" colo="30" row="3"></textarea>
        <input type="submit" value="Post" placeholder="type here..."> 

    </form>
     <%}%>   
          
   <div id="posts-list-container">
         
     <ul> 
      <% for(let i of posts){ %>
           
        <li>
           <p>
            <%= i.content %>
              <br>

              <small> 
               <%= i.user.name %>
              </small> 
            </p>
        </li>   

      <% }%> 
  
     </ul>

   </div>

 </section>


  

 